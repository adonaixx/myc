{
	"name": "myc",
	"type": "module",
	"description": "Private monorepo with shared utilities, helpers, and modular code pieces for reusable, streamlined functionality across projects.",
	"author": "Arthur Adonai",
	"private": true,
	"packageManager": "pnpm@9.12.2",
	"scripts": {
		"build-all": "pnpm run --filter=* build",
		"gen": "plop",
		"link-all": "pnpm run --filter=* link",
		"register": "pnpm build-all && pnpm link-all"
	},
	"devDependencies": {
		"@types/node": "latest",
		"plop": "^4.0.0",
		"prettier-plugin-jsdoc": "latest",
		"prettier-plugin-pkg": "latest",
		"prettier-plugin-toml": "latest"
	}
}
